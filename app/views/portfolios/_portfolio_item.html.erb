<h2><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></h2>
<p><%= portfolio_item.subtitle %></p>
<p><%= portfolio_item.body %></p>
<%= image_tag portfolio_item.thumb_image if portfolio_item.thumb_image %>
<%= link_to "Edit item", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %>
<%= link_to 'Delete item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
